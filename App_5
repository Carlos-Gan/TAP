    private void txtNombrePActionPerformed(java.awt.event.ActionEvent evt) {                                           
 prod.setNombre(txtNombreP.getText());
    }                                          

    private void txtNumSerieActionPerformed(java.awt.event.ActionEvent evt) {                                            
     prod.setNumSerie(txtNumSerie.getText());          
    }                                           

    private void txtPrecioActionPerformed(java.awt.event.ActionEvent evt) {                                          
prod.setPrecio(txtPrecio.getText());
    }                                         

    private void txtNumCuentaActionPerformed(java.awt.event.ActionEvent evt) {                                             
      clien.setNumCliente(txtNumCuenta.getText());
    }                                            

    private void txtNombreCActionPerformed(java.awt.event.ActionEvent evt) {                                           
clien.setNombre(txtNombreC.getText());
    }                                          

    private void txtNumeroActionPerformed(java.awt.event.ActionEvent evt) {                                          
clien.setTelefono(txtNumero.getText());
    }                                         

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
       prod.setNombre(txtNombreP.getText());
       prod.setNumSerie(txtNumSerie.getText());
       prod.setPrecio(txtPrecio.getText());
       
       clien.setNombre(txtNombreC.getText());
       clien.setNumCliente(txtNumCuenta.getText());
       clien.setTelefono(txtNumero.getText());
       
       jaInfo.setText("");
    
       jaInfo.append("Producto \n");
    jaInfo.append("Número de Serie de producto: " + txtNumSerie.getText() + "\n");
    jaInfo.append("Nombre de Producto: " + txtNombreP.getText() + "\n");
    jaInfo.append("Precio: " + txtPrecio.getText() + "\n");
           jaInfo.append("Cliente \n");
    jaInfo.append("Numero de cuenta: " + txtNumCuenta.getText() + "\n");
    jaInfo.append("Nombre de titular: " + txtNumCuenta.getText() + "\n");
    jaInfo.append("Numero de telefono: " + txtNumero.getText() + "\n");
    }                                        
    
